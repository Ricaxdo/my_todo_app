{
  "compilerOptions": {
    // Node + TS comunes
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // Para que funcionen imports como `import express from "express"`
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Opcional pero recomendado
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Si quieres, pero no son necesarios:
    // "rootDir": "./src",
    // "outDir": "./dist",
    "sourceMap": true
  }
}
